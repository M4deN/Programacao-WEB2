        <input type="text" id="tnome" name="nome"/>
        <input type="submit" value="Salvar" class="btn-primary"/>
        <br><br><br>
        <p><button class='btn btn-link' id='deslogar'>Deslogar</button></p>
    </form>
    
    <form id='flogin'>
        <h2>Login</h2>
        <p id='msglogin'></p>
        <p>
          <label for="tusuario">Usuario:</label>
          <input type="text" id="tusuario" name="usuario"/>
        </p>
        <p>
          <label for="senha">Senha:</label>
          <input type="password" id="tsenha" name="senha"/>
        </p>

        <input type="submit" value="Logar" class="btn-primary"/>
    </form>

